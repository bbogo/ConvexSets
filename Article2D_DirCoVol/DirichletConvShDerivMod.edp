func real[int] rand(int h){
  randinit(randint32() );
  real[int] vec(h);
  for(int i = 0;i<h;i++){
     vec(i) = 2*randreal1()-1;
  }
  return vec;
}

func real[int] symm(real[int] &vec){
	real[int] res(vec.n);
	res[0] = vec[0];
	for(int i=1;i<vec.n;i++){
		real mm = 0.5*(vec[i]+vec[vec.n-i]);
		res[i] = mm;
		res[vec.n-i] = mm;
	}
	return res;
}

