  real[int] vmin  = [vect(NN-1),vect(0:NN-2)];
  real[int] deriv = (vplus-vmin);
  deriv = 1/den1*deriv;
  real[int] deriv2 = (vplus+vmin);
  deriv2 = deriv2-2*vect;
  deriv2 = 1/den2*deriv2;
  real[int] crad = deriv+deriv2;
  real[int] X(NN),Y(NN);
    for(int j=0;j<NN;j++){
       X[j] = cos(thetas(j))*vect(j)-sin(thetas(j))*deriv(j);
       Y[j] = sin(thetas(j))*vect(j)+cos(thetas(j))*deriv(j);
    }
  border G(t=0,1;i){
      int inext = (i+1)%NN;
      x = (1-t)*X[i]+t*X[inext];
      y = (1-t)*Y[i]+t*Y[inext];
      label=0;
  }
  int[int] NG(NN);
  NG = 3;
